<Window x:Class="FundTool.Indirectas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FundTool"
        mc:Ignorable="d"
        Title="Indirectas" Height="450" Width="800">
    <Grid Background="#D3D3D3" Margin="0,0,2,0">
        <Grid x:Name="TipoDeSuelo" HorizontalAlignment="Left" Height="142" Margin="10,145,0,0" VerticalAlignment="Top" Width="263" Background="AntiqueWhite">
            <Label Content="Tipo de Suelo:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="Granular" Content="Suelo Granular" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" GroupName="TipoDeSuelo" RenderTransformOrigin="0.319,0.562"/>
            <RadioButton x:Name="Cohesivo" Content="Suelo Cohesivo" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" GroupName="TipoDeSuelo"/>
            <RadioButton x:Name="GranularCohesivo" Content="Suelo Granular-Cohesivo" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" GroupName="TipoDeSuelo"/>
            <Button x:Name="Siguientes" Content="Siguiente" HorizontalAlignment="Left" Margin="128,110,0,0" VerticalAlignment="Top" Width="53" Click="AceptarSuelo"/>
            <Button x:Name="Cancelars" Content="Cancelar" HorizontalAlignment="Left" Margin="198,110,0,0" VerticalAlignment="Top" Width="55" Click="CancelarSuelo"/>
        </Grid>
        <Grid x:Name="GranularGrid" HorizontalAlignment="Left" Height="377" Margin="278,10,0,0" VerticalAlignment="Top" Width="504" Background="AntiqueWhite">
            <Label Content="Datos Generales" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Datos del Pilote" HorizontalAlignment="Left" Margin="23,36,0,0" VerticalAlignment="Top"/>
            <Label Content="Solicitaciones" HorizontalAlignment="Left" Margin="312,36,0,0" VerticalAlignment="Top"/>
            <Label Content="Diametro Inicial:" HorizontalAlignment="Left" Margin="23,67,0,0" VerticalAlignment="Top"/>
            <Label Content="Longitud Pilote:" HorizontalAlignment="Left" Margin="23,93,0,0" VerticalAlignment="Top"/>
            <Label Content="Longitud Relleno:" HorizontalAlignment="Left" Margin="23,119,0,0" VerticalAlignment="Top"/>
            <Label Content="Coef. de Friccion &#xD;&#xA;Suelo Competente:" HorizontalAlignment="Left" Margin="15,145,0,0" VerticalAlignment="Top"/>
            <Label Content="Porcentaje de Acero:" HorizontalAlignment="Left" Margin="7,223,0,0" VerticalAlignment="Top"/>
            <Label Content="Numero de Pilotes:" HorizontalAlignment="Left" Margin="15,256,0,0" VerticalAlignment="Top"/>
            <ListBox x:Name="ListaNumerosG" HorizontalAlignment="Left" Height="28" Margin="131,254,0,0" VerticalAlignment="Top" Width="49">
                <ListBoxItem IsSelected="True" Content="1"/>
                <ListBoxItem Content="2"/>
                <ListBoxItem Content="3"/>
                <ListBoxItem Content="4"/>
                <ListBoxItem Content="5"/>
            </ListBox>
            <TextBox x:Name="DiametroInicialG" HorizontalAlignment="Left" Height="23" Margin="131,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="LongitudPiloteG" HorizontalAlignment="Left" Height="23" Margin="131,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="LongitudRellenoG" HorizontalAlignment="Left" Height="21" Margin="131,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="CoefFriccionSueloG" HorizontalAlignment="Left" Height="33" Margin="131,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="PorcentajeAceroG" HorizontalAlignment="Left" Height="23" Margin="131,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <Label Content="cm" HorizontalAlignment="Left" Margin="185,67,0,0" VerticalAlignment="Top"/>
            <Label Content="m" HorizontalAlignment="Left" Margin="185,93,0,0" VerticalAlignment="Top"/>
            <Label Content="m" HorizontalAlignment="Left" Margin="185,119,0,0" VerticalAlignment="Top"/>
            <Label Content="kg/cm²" HorizontalAlignment="Left" Margin="185,157,0,0" VerticalAlignment="Top"/>
            <Label Content="%" HorizontalAlignment="Left" Margin="185,223,0,0" VerticalAlignment="Top"/>
            <Label Content="Carga Actuante:" HorizontalAlignment="Left" Margin="331,62,0,0" VerticalAlignment="Top"/>
            <Label Content="Momento Alrededor de X:" HorizontalAlignment="Left" Margin="277,88,0,0" VerticalAlignment="Top"/>
            <Label Content="Momento Alrededor de Y:" HorizontalAlignment="Left" Margin="277,114,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="CargaActuanteG" HorizontalAlignment="Left" Height="21" Margin="429,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="MomentoXG" HorizontalAlignment="Left" Height="21" Margin="429,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <TextBox x:Name="MomentoYG" HorizontalAlignment="Left" Height="21" Margin="429,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <Label Content="Suelo Granular" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Profundidad del Estudio de Suelos:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="246,179,0,0"/>
            <TextBox x:Name="ProfundidadEstudioSuelosG" HorizontalAlignment="Left" Height="23" Margin="440,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" RenderTransformOrigin="0.583,0.435" IsEnabled="False"/>
            <Label Content="m" HorizontalAlignment="Left" Margin="481,182,0,0" VerticalAlignment="Top"/>
            <Button Content="Agregar &#xA;Metro &#xA;y Golpes" HorizontalAlignment="Left" Margin="430,223,0,0" VerticalAlignment="Top" Width="64" Height="62" Click="AgregarMetroyGolpeGranular"/>
            <DataGrid x:Name="DataGridGolpes" HorizontalAlignment="Left" Height="122" Margin="253,216,0,0" VerticalAlignment="Top" Width="172" IsReadOnly="True" ItemsSource="{Binding}"/>
            <Button x:Name="SiguienteDatosSuelo" Content="Siguiente" HorizontalAlignment="Left" Margin="419,347,0,0" VerticalAlignment="Top" Width="75" Click="IntrodujoDatosSueloGranular" RenderTransformOrigin="0.533,0.773"/>
            <Label Content="Coef. de Friccion&#xD;&#xA; Relleno:" HorizontalAlignment="Left" Margin="15,182,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="CoefFriccionRellenoG" HorizontalAlignment="Left" Height="23" Margin="131,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" PreviewTextInput="NumericOnly"/>
            <Label Content="kg/cm²" HorizontalAlignment="Left" Margin="185,188,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="CohesivoGrid" HorizontalAlignment="Left" Height="351" Margin="202,10,0,0" VerticalAlignment="Top" Width="580" Background="AntiqueWhite" Visibility="Collapsed">
        </Grid>
        <Grid x:Name="GranularCohesivoGrid" HorizontalAlignment="Left" Height="351" Margin="202,10,0,0" VerticalAlignment="Top" Width="580" Background="AntiqueWhite" Visibility="Collapsed">
        </Grid>
        <Grid x:Name="Materiales" HorizontalAlignment="Left" Height="130" Margin="10,10,0,0" VerticalAlignment="Top" Width="263" Background="AntiqueWhite">
            <Label Content="Materiales" Margin="0,0,198,107"/>
            <Label Content="Resistencia del Concreto:" HorizontalAlignment="Left" Margin="1,23,0,0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="ResistenciaConcreto" HorizontalAlignment="Left" Height="23" Margin="144,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" PreviewTextInput="NumericOnly"/>
            <Label Content="kg/cm²" HorizontalAlignment="Left" Margin="194,23,0,0" VerticalAlignment="Top"/>
            <Label Content="Resistencia del Acero:&#xA;" HorizontalAlignment="Left" Margin="1,54,0,0" VerticalAlignment="Top" Width="133" Height="27"/>
            <TextBox x:Name="ResistenciaAcero" HorizontalAlignment="Left" Height="23" Margin="144,58,0,0" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="45" PreviewTextInput="NumericOnly"/>
            <Label Content="kg/cm²" HorizontalAlignment="Left" Margin="194,55,0,0" VerticalAlignment="Top"/>
            <Button x:Name="Aceptarm" Content="Aceptar" HorizontalAlignment="Left" Margin="136,93,0,0" VerticalAlignment="Top" Width="53" Click="AceptarMateriales"/>
            <Button x:Name="Cancelarm" Content="Cancelar" HorizontalAlignment="Left" Margin="198,93,0,0" VerticalAlignment="Top" Width="55" Click="CancelarMateriales"/>
        </Grid>
    </Grid>
</Window>
